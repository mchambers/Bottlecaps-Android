<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1.0"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:background="@drawable/leaderboard"
              >
    
    <TextView android:id="@+id/scoreboardItemRank"
              android:text=""
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.2"
              android:textSize="36sp"
              android:textColor="@android:color/black"
              android:gravity="center"
              />

    <com.loopj.android.image.SmartImageView android:id="@+id/scoreboardItemAvatar"
                                            android:layout_width="32dp"
                                            android:layout_height="32dp"
                                            android:layout_gravity="center"
                                            android:src="@drawable/avatar"
                                            />

    <TextView android:id="@+id/scoreboardItemName"
              android:text=""
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.4"
              android:gravity="center"
              android:textSize="16sp"
              android:layout_gravity="center"
              android:textColor="@android:color/black"
              />

    <TextView android:id="@+id/scoreboardItemScore"
              android:text="0"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.4"
              android:gravity="center"
              android:textSize="18sp"
              android:layout_gravity="center"
              android:textStyle="bold"
              android:textColor="@android:color/black"
            />

</LinearLayout>