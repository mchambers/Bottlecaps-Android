<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="30dp"
              android:layout_marginRight="30dp"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:background="#57000000"
              >

    <TextView
            android:text="Paused"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="34sp"
            android:textStyle="bold"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/pauseCaption"   
            android:textColor="@android:color/white"
            />

    <ImageButton
            android:src="@drawable/buttonpause1"
            android:id="@+id/pauseButton1"
            android:layout_below="@id/pauseCaption"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="0dp"
            android:background="@android:color/transparent"
            />

    <ImageButton
            android:src="@drawable/buttonpause2"
            android:id="@+id/pauseButton2"
            android:layout_below="@id/pauseButton1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="0dp"
            android:background="@android:color/transparent"
            />

    <ImageButton
            android:src="@drawable/buttonpause3"
            android:id="@+id/pauseButton3"
            android:layout_below="@id/pauseButton2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="0dp"
            android:background="@android:color/transparent"
            />

</RelativeLayout>